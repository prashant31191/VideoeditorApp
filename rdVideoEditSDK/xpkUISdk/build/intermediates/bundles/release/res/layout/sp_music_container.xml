            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp" >

                <RelativeLayout
                    android:id="@+id/sp_rl_music_qingxin"
                    android:layout_width="wrap_content"
