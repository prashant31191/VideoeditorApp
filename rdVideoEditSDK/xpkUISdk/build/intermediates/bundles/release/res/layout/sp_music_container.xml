            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" >

                <RelativeLayout
                    android:id="@+id/sp_rl_music_saye"
                    android:layout_width="wrap_content"
